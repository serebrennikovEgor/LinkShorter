@using ShortLink.Controllers
@using ShortLink.Models
@model List<Link>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Создать короткую ссылку</title>
      <style>
   table {
    width: 100%; /* Ширина таблицы */
    border-spacing: 1px; /* Расстояние между ячейками */
    border: 2px solid black;
   }
   td, th {
   
    padding: 5px; /* Поля вокруг текста */
   }
  </style>
</head>
        <table>
        <tr>
            <td> <b>ID</b> </td>
            <td> <b>FullName</b> </td>
            <td> <b>ShortLink</b> </td>
            <td> <b>CreateDate</b> </td>
            <td> <b>Transition</b> </td>
             @foreach (var link in Model)
                {
                    <tr><th> @Html.DisplayFor(currentLink =>link.Id ) </th>
                    <th> @Html.DisplayFor(currentLink =>link.FullName ) </th>
                    <th> <a href="@Html.DisplayFor(currentLink =>link.ShortLink)" target="_blank">@Html.DisplayFor(currentLink =>link.ShortLink)</a>
                   
                </th>
                    <th> @Html.DisplayFor(currentLink =>link.CreateDate ) </th>
                    <th> @Html.DisplayFor(currentLink =>link.Transition ) </th></tr>       
                  }
        </table>
        
       <script>
            function reload() 
            {
    
                location.reload();
            }
       </script>

     
    
   
 
</html>



